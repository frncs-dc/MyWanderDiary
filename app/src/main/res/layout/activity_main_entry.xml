<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/activity_main_entry_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:text="LocationName"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_main_entry_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Date"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_entry_tv_location"
        app:layout_constraintStart_toStartOf="@+id/activity_main_entry_tv_location" />

    <TextView
        android:id="@+id/activity_main_entry_tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Country"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_entry_tv_date"
        app:layout_constraintStart_toEndOf="@+id/activity_main_entry_tv_date"
        app:layout_constraintTop_toTopOf="@+id/activity_main_entry_tv_date" />
</androidx.constraintlayout.widget.ConstraintLayout>