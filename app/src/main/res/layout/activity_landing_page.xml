<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2">

    <ImageView
        android:id="@+id/activity_landing_page_img_splash"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashintro" />

    <TextView
        android:id="@+id/activity_landing_page_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="My Wander Diary"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_landing_page_img_splash"
        app:layout_constraintStart_toStartOf="@+id/activity_landing_page_img_splash"
        app:layout_constraintTop_toBottomOf="@+id/activity_landing_page_img_splash" />

    <TextView
        android:id="@+id/activity_landing_page_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="your travel companion"
        android:textColor="#7B9582"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_landing_page_tv_title"
        app:layout_constraintStart_toStartOf="@+id/activity_landing_page_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_landing_page_tv_title" />

    <Button
        android:id="@+id/activity_landing_page_btn_getstarted"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:background="@drawable/rounded_button_primary2"
        android:backgroundTint="@color/primary2"
        android:fontFamily="@font/inter_medium"
        android:text="Get Started"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>