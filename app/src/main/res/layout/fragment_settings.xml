<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_settings_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_settings_map_placeholder"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_settings_tv_header"
            app:srcCompat="@drawable/map_placeholder" />

        <EditText
            android:id="@+id/fragment_settings_et_address"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button_white"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Home street address"
            android:inputType="textPostalAddress"
            android:paddingLeft="18sp"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_settings_map_placeholder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fragment_settings_map_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/fragment_settings_map_placeholder" />

        <SeekBar
            android:id="@+id/fragment_settings_seekbar"
            style="@android:style/Widget.Material.SeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="72dp"
            android:progressTint="@color/secondary"
            android:thumbTint="@color/accent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintStart_toStartOf="@+id/fragment_settings_et_address"
            app:layout_constraintTop_toBottomOf="@+id/fragment_settings_et_address" />

        <TextView
            android:id="@+id/fragment_settings_tv_seekbar_value"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_medium"
            android:text="780m"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_settings_seekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_settings_seekbar" />

        <EditText
            android:id="@+id/fragment_settings_et_custom_address"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button_white"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Custom street address"
            android:inputType="textPostalAddress"
            android:paddingLeft="18sp"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_settings_tv_seekbar_value"
            app:layout_constraintStart_toStartOf="@+id/fragment_settings_seekbar"
            app:layout_constraintTop_toBottomOf="@+id/fragment_settings_seekbar" />

        <Button
            android:id="@+id/fragment_settings_btn_save"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:background="@drawable/rounded_button_primary2"
            android:fontFamily="@font/inter_medium"
            android:text="Save"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_settings_et_address"
            app:layout_constraintTop_toBottomOf="@+id/fragment_settings_et_custom_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>